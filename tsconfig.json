{
  "compilerOptions": {
    "strictNullChecks": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "allowJs": false,
    "checkJs": false,
    "declaration": true,
    "declarationDir": "dist/",
    "typeRoots": [
      "./typings"
    ],
    "types": [
      "node",
      "react",
      "react-dom"
    ],
    "target": "es6",
    "lib": [
      "dom",
      "es7",
      "esnext"
    ]
  },
  "include": [
    "src/utils/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
